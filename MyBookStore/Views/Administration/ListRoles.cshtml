@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">
    Add New Role
</a>
@if (Model.Any())
{

    foreach (var role in Model)
    {

        <div class="container py-5">
            <div class="card">
                <div class="card-header">
                    <h5>Role Id: @role.Id</h5>
                </div>
                <div class="card-body">
                    <h5>@role.Name</h5>

                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="EditRole" asp-route-Id="@role.Id">
                        Edit
                    </a>
                    <a href="#" class="btn btn-primary" style="width:auto">
                        Delete
                    </a>
                </div>
            </div>
        </div>
    }

}
else
{
    <div class="container py-5">
        <div class="card">
            <div class="card-header">
                <h5>No Roles Created Yet!</h5>
            </div>
            <div class="card-body">
                <h5>Use the button below to create a role</h5>
                <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">
                    Create Role
                </a>
            </div>
            <div class="card-footer">
                <h5>footer</h5>
            </div>
        </div>
    </div>
}