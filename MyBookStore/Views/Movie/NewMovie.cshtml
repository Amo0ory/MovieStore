@model MyBookStore.ViewModels.NewMovieForm


@{
    ViewData["Title"] = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Movie</h1>

@using (Html.BeginForm("Save", "Movie"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Name)
        @Html.TextBoxFor(c => c.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Genres)
        @Html.TextBoxFor(m => m.Movie.Genre, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Genre)
        @*  @Html.DropDownListFor(m => m.Genres, new SelectList(Model.Genres, "GenreId", "Name"), new { @class = "form-control" })*@
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

